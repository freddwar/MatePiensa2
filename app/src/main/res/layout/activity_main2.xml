<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.omnisport.matepiensa.Main2Activity"
    android:background="@drawable/fondo2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/resuelva22"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/button2"
        android:background="@drawable/n4"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:onClick="mensaje" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/button3"
        android:background="@drawable/n6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button10" />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:id="@+id/button10"
        android:layout_marginTop="100dp"
        android:background="@drawable/n3"
        android:layout_below="@+id/button2"
        android:layout_alignStart="@+id/button2" />

</RelativeLayout>
